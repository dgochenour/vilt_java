SOURCE_DIR = 

TARGET_ARCH=x64Darwin17clang9.0

# If undefined in the environment default NDDSHOME to install dir
ifndef NDDSHOME
NDDSHOME := /Applications/rti_connext_dds-6.0.1
endif

JAVA_PATH = java
JAVAC_PATH = javac

JAVA_SOURCES = $(SOURCE_DIR)./ShapeType.java $(SOURCE_DIR)./ShapeTypeSeq.java $(SOURCE_DIR)./ShapeTypeTypeSupport.java $(SOURCE_DIR)./ShapeTypeTypeCode.java $(SOURCE_DIR)./ShapeTypeDataReader.java $(SOURCE_DIR)./ShapeTypeDataWriter.java $(SOURCE_DIR)./ShapeFillKind.java $(SOURCE_DIR)./ShapeFillKindSeq.java $(SOURCE_DIR)./ShapeFillKindTypeSupport.java $(SOURCE_DIR)./ShapeFillKindTypeCode.java $(SOURCE_DIR)./ShapeTypeExtended.java $(SOURCE_DIR)./ShapeTypeExtendedSeq.java $(SOURCE_DIR)./ShapeTypeExtendedTypeSupport.java $(SOURCE_DIR)./ShapeTypeExtendedTypeCode.java $(SOURCE_DIR)./ShapeTypeExtendedDataReader.java $(SOURCE_DIR)./ShapeTypeExtendedDataWriter.java $(SOURCE_DIR)./ShapeTypeExtendedSubscriber.java $(SOURCE_DIR)./ShapeTypeExtendedPublisher.java
CLASS_FILES  = $(JAVA_SOURCES:%.java=%.class)

RTI_CLASSPATH := $(NDDSHOME)/lib/java/nddsjava.jar

%.class : %.java
	$(JAVAC_PATH)  -classpath ".:$(RTI_CLASSPATH)" $<

all: $(CLASS_FILES)
 
#
# Convenient way to run the java programs
#

export DYLD_LIBRARY_PATH := $(NDDSHOME)/lib/x64Darwin17clang9.0:/usr/lib/lwp:$(DYLD_LIBRARY_PATH)

ShapeTypeExtendedPublisher: ./ShapeTypeExtendedPublisher.class
	$(JAVA_PATH) -Djava.library.path=$(NDDSHOME)/lib/x64Darwin17clang9.0 -classpath ".:$(RTI_CLASSPATH)" ShapeTypeExtendedPublisher $(ARGS)
 
ShapeTypeExtendedSubscriber: ./ShapeTypeExtendedSubscriber.class
	$(JAVA_PATH) -Djava.library.path=$(NDDSHOME)/lib/x64Darwin17clang9.0 -classpath ".:$(RTI_CLASSPATH)" ShapeTypeExtendedSubscriber $(ARGS)
